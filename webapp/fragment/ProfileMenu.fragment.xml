<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <ResponsivePopover id="profilePopover" placement="BottomEnd" showHeader="false" contentWidth="16rem">
    <List>
      <items>
        <StandardListItem title="Mein Profil"      icon="sap-icon://person-placeholder" type="Active" press=".onProfileAction">
          <customData><core:CustomData key="action" value="profile"/></customData>
        </StandardListItem>
        <StandardListItem title="Einstellungen"    icon="sap-icon://action-settings"    type="Active" press=".onProfileAction">
          <customData><core:CustomData key="action" value="settings"/></customData>
        </StandardListItem>
        <StandardListItem title="Anmelden"         icon="sap-icon://log"                type="Active"
                          visible="{= !${landing>/user/isLoggedIn} }" press=".onProfileAction">
          <customData><core:CustomData key="action" value="login"/></customData>
        </StandardListItem>
        <StandardListItem title="Abmelden"         icon="sap-icon://log"                type="Active"
                          visible="{landing>/user/isLoggedIn}" press=".onProfileAction">
          <customData><core:CustomData key="action" value="logout"/></customData>
        </StandardListItem>
      </items>
    </List>
  </ResponsivePopover>
</core:FragmentDefinition>
