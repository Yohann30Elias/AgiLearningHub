<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  controllerName="agilh.controller.App">

  <VBox fitContainer="true">
    <!-- 1) eine ShellBar -->
    <f:ShellBar id="shell" class="agilita-shellbar" title="AGI Learning Hub" />

    <HBox class="agilita-nav" justifyContent="Start" alignItems="Center">

      <Link text="Landing" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="landing"/></customData>
      </Link>

      <Text text="·" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>

      <Link text="Übersicht" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="catalog"/></customData>
      </Link>

      <Text text="·" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>

      <Link text="Zuweisungen" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="assigned"/></customData>
      </Link>

      <Text text="·" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>

      <Link text="Meine Kurse" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="mylearnings"/></customData>
      </Link>

      <Text text="·" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>

      <Link text="Favoriten" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="favorites"/></customData>
      </Link>

      <Text text="·" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>

      <Link text="Abgeschlossen" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="completed"/></customData>
      </Link>

      <Text text="·" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>

      <Link text="Manager" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="manager"/></customData>
      </Link>

      <Text text="·" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>

      <Link text="Profil" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="profile"/></customData>
      </Link>

    </HBox>


    <!-- 3) robuster Fullscreen-Container für Routing -->
    <App id="appNav" height="100%" width="100%">
      <layoutData><FlexItemData growFactor="1"/></layoutData>
    </App>
  </VBox>
</mvc:View>