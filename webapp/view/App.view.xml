<mvc:View
  controllerName="agilh.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.f"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core">

  <m:VBox fitContainer="true">

    <!-- ShellBar mit secondTitle + Menü -->
    <ShellBar
      id="shell"
      title="AGI Learning Hub"
      secondTitle="Explore · Learn · Grow · Rise"
      homeIcon="../img/AgilitaLogo.png"
      homeIconPressed=".onHomePressed"
      showSearch="true"
      searchButtonPressed=".onSearchPressed"
      avatarPressed=".onAvatarPressed">

      <!-- Dropdown-Menü rechts am Titel -->
      <menu>
        <m:Menu itemSelected=".onMenuSelect">
          <m:items>
            <m:MenuItem text="Home">
              <m:customData><core:CustomData key="route" value="landing"/></m:customData>
            </m:MenuItem>
            <m:MenuItem text="Übersicht Kurse/Lernpfade">
              <m:customData><core:CustomData key="route" value="catalog"/></m:customData>
            </m:MenuItem>
            <m:MenuItem text="Zuweisungen">
              <m:customData><core:CustomData key="route" value="assigned"/></m:customData>
            </m:MenuItem>
            <m:MenuItem text="Meine Kurse">
              <m:customData><core:CustomData key="route" value="mylearnings"/></m:customData>
            </m:MenuItem>
            <m:MenuItem text="Favoriten">
              <m:customData><core:CustomData key="route" value="favorites"/></m:customData>
            </m:MenuItem>
            <m:MenuItem text="Abgeschlossen">
              <m:customData><core:CustomData key="route" value="completed"/></m:customData>
            </m:MenuItem>
            <m:MenuItem text="Manager">
              <m:customData><core:CustomData key="route" value="manager"/></m:customData>
            </m:MenuItem>
          </m:items>
        </m:Menu>
      </menu>

      <!-- Avatar rechts -->
      <profile>
        <Avatar initials="AG" size="S"/>
      </profile>
    </ShellBar>

    <!-- Router-Container -->
    <m:App id="appNav" height="100%" width="100%">
      <m:layoutData><m:FlexItemData growFactor="1"/></m:layoutData>
    </m:App>
  </m:VBox>
</mvc:View>
