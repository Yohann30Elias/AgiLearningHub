<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  controllerName="agilh.controller.App">

  <VBox fitContainer="true">
    <!-- 1) eine ShellBar -->
    <f:ShellBar id="shell" class="agilita-shellbar" title="AGI Learning Hub" />

    <!-- 2) sehr schlanke „Nav-Zeile“ (Links, KEINE Toolbar) -->
    <HBox class="agilita-nav" justifyContent="Start" alignItems="Center">
      <Link text="Landing" press=".onTopNavLink">
        <customData><core:CustomData key="route" value="landing"/></customData>
      </Link>
      <!-- später weitere Links einfügen -->
    </HBox>

    <!-- 3) robuster Fullscreen-Container für Routing -->
    <App id="appNav" height="100%" width="100%">
      <layoutData><FlexItemData growFactor="1"/></layoutData>
    </App>
  </VBox>
</mvc:View>